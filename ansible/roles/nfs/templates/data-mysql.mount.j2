# /etc/systemd/system/data.mount

[Unit]
Description=Data Mount

[Mount]
What={{ ip_address['backup'] }}:/var/lib/mysql
Where=/data/mysql
Type=nfs
Options=vers=3,proto=tcp,noauto,x-systemd.automount
# {{ ip_address['backup'] }}:/srv/share/ /mnt/ nfs vers=3,proto=udp,noauto,x-systemd.automount 0 0
#DirectoryMode=0755

[Install]
WantedBy=multi-user.target
